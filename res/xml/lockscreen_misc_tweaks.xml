<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/lockscreen_category" >

        <PreferenceScreen
            android:title="@string/lockscreen_notifications"
            android:fragment="com.android.settings.du.LockscreenNotifications" />

        <CheckBoxPreference
            android:key="lockscreen_maximize_widgets"
            android:title="@string/security_maximize_widgets_title"/>

        <CheckBoxPreference
            android:key="disable_camera_widget"
            android:title="@string/disable_camera_widget_title"
            android:summary="@string/disable_camera_widget_summary" />

        <CheckBoxPreference
            android:key="battery_around_lockscreen_ring"
            android:title="@string/battery_around_lockscreen_ring"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="lockscreen_torch"
            android:title="@string/lockscreen_glowpad_torch_title"
            android:summary="@string/lockscreen_glowpad_torch_summary" />

        <CheckBoxPreference
            android:key="allow_rotation"
            android:title="@string/allow_rotate_title"
            android:summary="@string/allow_rotate_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="see_through"
            android:title="@string/see_through_title"
            android:summary="@string/see_through_summary" />

        <CheckBoxPreference
            android:key="blur_behind"
            android:title="@string/blur_behind_title"
            android:summary="@string/blur_behind_summary" />

        <SeekBarPreference
            android:key="blur_radius"
            android:title="@string/blur_radius_title"
            android:summary="@string/blur_radius_summary"
            android:max="25"
            android:defaultValue="12"
            android:dependency="blur_behind" />

</PreferenceScreen>
